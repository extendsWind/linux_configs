// Place your key bindings in this file to override the defaultsauto[]
[
    /*
    取消快捷键
    {
        "key": "ctrl+n",
        "command": "-workbench.action.files.newUntitledFile"
    }, */

    /*  vim相关快捷键设置某些情况下可能需要下面的条件
    {
      "key": "k",
      "command": "cursorUp",
      "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal' && !suggestWidgetMultipleSuggestions && !suggestWidgetVisible"
    }
    */

    /* for editor and terminal */
    {
        "key": "ctrl+n",
        "command": "cursorDown",
        "when": "vim.active || terminalFocus"
    },
    {
        "key": "ctrl+p",
        "command": "cursorUp",
        "when": "vim.active || terminalFocus"
    },
    {
        "key": "ctrl+a",
        "command": "cursorHome",
        "when": "vim.active || terminalFocus"
    },
    {
        "key": "ctrl+e",
        "command": "cursorEnd",
        "when": "vim.active || terminalFocus"
    },
    {
        "key": "ctrl+d",
        "command": "deleteRight",
        "when": "vim.active || terminalFocus"
    },
    {
        "key": "alt+f",
        "command": "cursorWordRight",
        "when": "vim.active || terminalFocus"
    },
    {
        "key": "alt+b",
        "command": "cursorWordLeft",
        "when": "vim.active || terminalFocus"
    },


    /* for vim insert mode only*/
    {
        "key": "ctrl+f",
        "command": "cursorRight",
        "when": "vim.active && vim.mode == 'Insert'"
    },
    {
        "key": "ctrl+b",
        "command": "cursorLeft",
        "when": "vim.active && vim.mode == 'Insert'"
    },

    /* for vi normal mode only */
    {
        "key": "j",
        "command": "cursorDown",
        "when": "vim.active && vim.mode == 'Normal' && editorFocus"
    },
    {
        "key": "k",
        "command": "cursorUp",
        "when": "vim.active && vim.mode == 'Normal' && editorFocus"
    },

    /* terminal */
    {
        "key": "ctrl+f",
        "command": "cursorRight",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+b",
        "command": "cursorLeft",
        "when": "terminalFocus"
    }
]