{
    "git.ignoreMissingGitWarning": true,
/*    "git.path": "C:\\MyProgram\\quick_start\\git.bat", */
    "git.autofetch": true,
    "terminal.external.linuxExec": "fish",
    "terminal.integrated.shell.windows": "bash.exe",
    "terminal.integrated.allowChords": false,


    "vim.insertModeKeyBindings": [
        {
            "before": ["<C-n>"],
            "commands": ["cursorDown"]
        },
        {
            "before": ["<C-p>"],
            "commands": ["cursorUp"]
        }
    ],

    "vim.normalModeKeyBindings": [
        {
            "before": ["<leader>","w"],
            "commands": ["workbench.action.files.newUntitledFile"]
        }
    ],
    "editor.fontFamily": "'WenQuanYi Micro Hei Mono','Droid Sans Mono', monospace, 'Droid Sans Fallback'",
    "zotero.minimizeAfterPicking": true,
    "vim.leader": "<space>",
    "window.zoomLevel": 2
}
